#!/bin/bash -e

usage() {
  cat << EOF
Usage: hub stack <sub command>

Parameters:
    deploy          Deploy current stack
    undeploy        Undeploy current stack
    elaborate       Reconcile deployment plan for this stack
    explain         Display stack outputs, component's parameters, outputs, and capabilities
    ls              List of available stacks
    set             Setting active stack
EOF
}

usage
exit 1
